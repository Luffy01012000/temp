{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"include": ["scripts/**/*.js", "src/**/*.js","src/**/*.ts","scripts/**/*.ts"],
		"ignore": ["biome.json"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"		
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
			
		}
	}
}
